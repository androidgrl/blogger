<%= form_for(@article, html: {multipart: true}) do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %>
  <%= f.text_field :body %>
  </p>
  <p>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>
  </p>
  <p>
  <p>
  <% if @article.image.exists? %>
    <%= image_tag @article.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach a New Image" %><br />
  <%= f.file_field :image %>
  </p>
  </p>
  <%= f.submit %>
<% end %>
